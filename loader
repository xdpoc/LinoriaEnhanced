    Default = 1,
    Text = 'Configuration Slot',
    Tooltip = 'Select save slot'
})

ConfigGroup:AddButton({
    Text = 'Save Configuration',
    Func = function()
        SaveManager:Save(Options.ConfigSlot.Value)
        print('[Arc] Saved to', Options.ConfigSlot.Value)
    end,
    Tooltip = 'Save current settings'
})

ConfigGroup:AddButton({
    Text = 'Load Configuration',
    Func = function()
        SaveManager:Load(Options.ConfigSlot.Value)
        print('[Arc] Loaded from', Options.ConfigSlot.Value)
    end,
    Tooltip = 'Load selected configuration'
})

ConfigGroup:AddButton({
    Text = 'Reset to Defaults',
    Func = function()
        SaveManager:Reset()
        print('[Arc] Reset to defaults')
    end,
    DoubleClick = true,
    Tooltip = 'Double-click to reset'
})

Library:SetWatermarkVisibility(true)

local FrameTimer = tick()
local FrameCounter = 0
local FPS = 60

local WatermarkConnection = game:GetService('RunService').RenderStepped:Connect(function()
    FrameCounter = FrameCounter + 1
    if (tick() - FrameTimer) >= 1 then
        FPS = FrameCounter
        FrameTimer = tick()
        FrameCounter = 0
    end
    Library:SetWatermark(('Arc Client | %s fps | %s ms'):format(
        math.floor(FPS),
        math.floor(game:GetService('Stats').Network.ServerStatsItem['Data Ping']:GetValue())
    ))
end)

Library:OnUnload(function()
    WatermarkConnection:Disconnect()
    ControlFrame:Destroy()
    print('[Arc] Unloaded')
end)

local function ToggleUI(visible)
    UIState.Visible = visible
    Window.Holder.Visible = visible
    ToggleUIButton.Text = visible and 'üëÅÔ∏è' or '‚óÄ'
end

local function SetUILocked(locked)
    UIState.Locked = locked
    LockUIButton.Text = locked and 'üîì' or 'üîí'
    LockUIButton.BackgroundColor3 = locked and Library.colors.accent or Library.colors.main
    LockUIButton.BorderColor3 = locked and Library.colors.accentDark or Library.colors.accent
    Window:SetDraggable(not locked)
end

ToggleUIButton.MouseButton1Click:Connect(function()
    ToggleUI(not UIState.Visible)
end)

LockUIButton.MouseButton1Click:Connect(function()
    SetUILocked(not UIState.Locked)
end)

if isMobile then
    local touchStart, touchStartTime
    
    InputService.TouchStarted:Connect(function(touch, processed)
        if processed then return end
        touchStart = touch.Position
        touchStartTime = tick()
    end)
    
    InputService.TouchEnded:Connect(function(touch, processed)
        if processed or not touchStart then return end
        
        local touchDuration = tick() - touchStartTime
        local touchDistance = (touch.Position - touchStart).Magnitude
        
        if touchDuration < 0.3 and touchDistance < 20 then
            local togglePos = ToggleUIButton.AbsolutePosition
            local toggleSize = ToggleUIButton.AbsoluteSize
            local lockPos = LockUIButton.AbsolutePosition
            local lockSize = LockUIButton.AbsoluteSize
            
            if touch.Position.X >= togglePos.X and touch.Position.X <= togglePos.X + toggleSize.X and
               touch.Position.Y >= togglePos.Y and touch.Position.Y <= togglePos.Y + toggleSize.Y then
                ToggleUI(not UIState.Visible)
            elseif touch.Position.X >= lockPos.X and touch.Position.X <= lockPos.X + lockSize.X and
                   touch.Position.Y >= lockPos.Y and touch.Position.Y <= lockPos.Y + lockSize.Y then
                SetUILocked(not UIState.Locked)
            end
        end
        
        touchStart = nil
        touchStartTime = nil
    end)
end

Toggles.ControlButtonsToggle:OnChanged(function()
    ControlFrame.Visible = Toggles.ControlButtonsToggle.Value
end)

Toggles.WindowDraggable:OnChanged(function()
    if not UIState.Locked then
        Window:SetDraggable(Toggles.WindowDraggable.Value)
    end
end)

Options.WindowTransparency:OnChanged(function()
    Window.Holder.BackgroundTransparency = Options.WindowTransparency.Value
end)

Options.AccentColorPicker:OnChanged(function()
    Library.colors.accent = Options.AccentColorPicker.Value
    Library.colors.accentDark = Library:darken(Library.colors.accent)
    Library:updateColors()
    ToggleUIButton.BackgroundColor3 = Library.colors.accent
    ToggleUIButton.BorderColor3 = Library.colors.accentDark
    if UIState.Locked then
        LockUIButton.BackgroundColor3 = Library.colors.accent
        LockUIButton.BorderColor3 = Library.colors.accentDark
    end
end)

ThemeManager:SetLibrary(Library)
SaveManager:SetLibrary(Library)

ThemeManager:SetFolder('ArcClient')
SaveManager:SetFolder('ArcClient')

ThemeManager:ApplyToTab(Tabs['UI Settings'])
SaveManager:BuildConfigSection(Tabs['UI Settings'])

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({ 'MenuKeybind', 'MenuKeybind2', 'ConfigSlot', 'AutoSaveConfig' })

SaveManager:LoadAutoloadConfig()

SetUILocked(false)
ToggleUI(true)
