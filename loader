local repo = 'https://raw.githubusercontent.com/violin-suzutsuki/LinoriaLib/main/'

local Library = loadstring(game:HttpGet(repo .. 'Library.lua'))()
local ThemeManager = loadstring(game:HttpGet(repo .. 'addons/ThemeManager.lua'))()
local SaveManager = loadstring(game:HttpGet(repo .. 'addons/SaveManager.lua'))()

local InputService = game:GetService('UserInputService')
local GuiService = game:GetService('GuiService')
local TweenService = game:GetService('TweenService')
local CoreGui = game:GetService('CoreGui')

local isMobile = (InputService.TouchEnabled and not InputService.MouseEnabled) or GuiService:IsTenFootInterface()

local Window = Library:CreateWindow({
    Title = 'Arc Client',
    Center = not isMobile,
    AutoShow = true,
    TabPadding = 8,
    MenuFadeTime = 0.2,
    Size = isMobile and UDim2.new(0, 500, 0, 275) or nil,
    Position = isMobile and UDim2.new(0, 10, 0.5, -137) or nil
})

local UIState = {
    Visible = true,
    Locked = false
}

local ControlFrame = Instance.new('Frame')
ControlFrame.Name = 'ControlFrame'
ControlFrame.Parent = Library.container
ControlFrame.BackgroundTransparency = 1
ControlFrame.Size = UDim2.new(0, 80, 0, 120)
ControlFrame.Position = UDim2.new(0, 10, 0.5, -60)
ControlFrame.ZIndex = 999

local ToggleUIButton = Instance.new('TextButton')
ToggleUIButton.Name = 'ToggleUIButton'
ToggleUIButton.Parent = ControlFrame
ToggleUIButton.Size = UDim2.new(0, 70, 0, 70)
ToggleUIButton.Position = UDim2.new(0, 5, 0, 0)
ToggleUIButton.Text = 'üëÅÔ∏è'
ToggleUIButton.Font = Enum.Font.Code
ToggleUIButton.TextSize = 32
ToggleUIButton.BackgroundColor3 = Library.colors.accent
ToggleUIButton.TextColor3 = Library.colors.text
ToggleUIButton.BorderColor3 = Library.colors.accentDark
ToggleUIButton.BorderMode = Enum.BorderMode.Inset
ToggleUIButton.AutoButtonColor = false
ToggleUIButton.ZIndex = 1000

local LockUIButton = Instance.new('TextButton')
LockUIButton.Name = 'LockUIButton'
LockUIButton.Parent = ControlFrame
LockUIButton.Size = UDim2.new(0, 70, 0, 70)
LockUIButton.Position = UDim2.new(0, 5, 0, 75)
LockUIButton.Text = 'üîí'
LockUIButton.Font = Enum.Font.Code
LockUIButton.TextSize = 28
LockUIButton.BackgroundColor3 = Library.colors.main
LockUIButton.TextColor3 = Library.colors.text
LockUIButton.BorderColor3 = Library.colors.accent
LockUIButton.BorderMode = Enum.BorderMode.Inset
LockUIButton.AutoButtonColor = false
LockUIButton.ZIndex = 1000

local Tabs = {
    Main = Window:AddTab('Main'),
